      },
      "args": [
        {
          "name": "switch",
          "type": "dropdown",
          "values": [
            {
              "id": "on",
              "label": {
                "en": "On",
                "nl": "Aan"
              }
            },
            {
              "id": "off",
              "label": {
                "en": "Off",
                "nl": "Uit"
              }
            }
          ]
        }
      ]
    },
